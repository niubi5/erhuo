<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/erhuo_donate_title"
            style="@style/FrameTitleRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/FrameTitleRedText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="爱心捐赠" />

            <ImageView
                android:id="@+id/home_search"
                style="@style/FrameTitleButtonRight"
                android:src="@drawable/goods_help_plus" />
        </FrameLayout>

        <View style="@style/ShadowTitle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout1"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical"
            >
        <EditText 
                android:id="@+id/et_donate_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="18dp"
                android:textSize="15sp"
                android:background="@null"
                android:hint="@string/title_donate_request"             
                />
        
        <View 
                android:id="@+id/view_separated_one"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="8dp"
                android:background="@color/text_hint_color"
                />
        
        <EditText 
                android:id="@+id/et_donate_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:background="@null"
                android:hint="@string/describe_donate_request"
                android:maxLines="5"
                />
        
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/ll_donate_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <RelativeLayout 
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="18dp"
                android:background="@color/text_hint_color"
                >
            <ImageView
                android:id="@+id/add_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/add_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/add_image"
                android:layout_below="@+id/add_image"
                android:text="添加图片"
                android:textColor="@color/donate_add_text"
                android:textSize="8sp" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            > 
            <ImageView 
                android:id="@+id/iv_donate_request_address"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/goods_receive_address"
                />
            <TextView 
                android:id="@+id/tv_donate_request_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/donate_request_address"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:textSize="10sp"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <View 
                android:id="@+id/view_separated_two"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/donate_add"
                
                />
        
        <LinearLayout 
            android:id="@+id/donate_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_donate_logistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:paddingTop="3dp"
                android:text="@string/donate_request_logistics"
                android:textColor="@color/black"
                />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                
               />
            
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geminno.erhuo.HelpDetialActivity" >

    <FrameLayout
        android:id="@+id/erhuo_donate_detial_title"
        style="@style/FrameTitleRed" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_help_detial_return"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:onClick="onclick"
                android:scaleType="centerInside"
                android:src="@drawable/left_arrow_white" />

            <TextView
                style="@style/FrameTitleRedText"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="收到的帮助" />
        </RelativeLayout>
    </FrameLayout>
<TextView 
    android:id="@+id/tv_no_donate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="暂时还没收到帮助哦"
    android:layout_centerInParent="true"
    android:textSize="@dimen/font_large"
    android:textColor="@color/dimgray"
    android:visibility="invisible"/>
    <ListView
        android:id="@+id/lv_help_detail_receive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/erhuo_donate_detial_title" >
    </ListView>

</RelativeLayout>
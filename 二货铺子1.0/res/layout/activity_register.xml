<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#F9F8F4" >
    <FrameLayout
        android:id="@+id/erhuo_message_title"
        style="@style/FrameTitleRed" >

        <TextView
            style="@style/FrameTitleRedText"
            android:text="@string/register" />

        <ImageView
            android:id="@+id/iv_register_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_arrow_white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />

    </FrameLayout>

    <View style="@style/ShadowTitle" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/erhuo_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
       	android:layout_marginTop="30dp"
       	android:background="#ffffff" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:hint="@string/input_phone_num"
            android:textColorHint="@color/text_hint_color" >
        </EditText>  
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
       	android:layout_marginTop="10dp"
       	android:background="#ffffff" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mima"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:inputType="textPassword"
            android:layout_gravity="center_vertical"
            android:hint="@string/input_pwd"
            android:textColorHint="@color/text_hint_color" >
        </EditText>  
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
       	android:layout_marginTop="10dp"
       	android:background="#ffffff" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mima"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/et_pwd_again"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:background="@null"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:hint="@string/input_pwd_again"
            android:textColorHint="@color/text_hint_color" >
        </EditText>  
    </LinearLayout>
    <CheckBox
        android:id="@+id/chk_agree_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agree_rule"
        android:textColor="@color/text_hint_color" 
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:background="#FF3F40"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff" />
</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geminno.erhuo.ReportDonationActivity" >

    <RelativeLayout
        android:id="@+id/erhuo_donate_title"
        style="@style/FrameTitleRed"
        android:layout_width="match_parent" >

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="50dp"
            android:layout_height="40dp" >

            <ImageView
                android:id="@+id/iv_back_report"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/left_arrow_white" />
        </LinearLayout>

        <TextView
            style="@style/FrameTitleRedText"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="举报捐赠" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_report_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/erhuo_donate_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:hint="请详细描述您的举报信息"
        android:textSize="@dimen/font_middle" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_donation_report"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/main_red"
        android:gravity="center"
        android:text="举报"
        android:textColor="@color/white" />

</RelativeLayout>
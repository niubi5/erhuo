<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    tools:context="com.geminno.erhuo.SearchActivity"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/erhuo_title"
        style="@style/FrameTitleRed"
        android:layout_width="match_parent" >

        <ImageView
            android:id="@+id/ib_shezhi"
            style="@style/FrameTitleButtonLeft"
            android:src="@drawable/left_arrow_white" />

        <EditText
            android:id="@+id/et_sousuo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp"
            android:layout_toLeftOf="@+id/tv"
            android:background="@drawable/seabar_input"
            android:drawableLeft="@drawable/btn_home_search_gray"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="搜索"
            android:singleLine="true"
            android:textSize="@dimen/font_middle" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text="搜索"
            android:textColor="@color/main_white"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_xiugai_mima"
        style="@style/MyInfoLinearLayout"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_xiugaimima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空历史记录"
            android:textSize="@dimen/font_middle" />

    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    
   

</LinearLayout>

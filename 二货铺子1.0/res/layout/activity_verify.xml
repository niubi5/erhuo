<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#F9F8F4" >

    <FrameLayout
        android:id="@+id/erhuo_message_title"
        style="@style/FrameTitleRed" >

        <TextView
            style="@style/FrameTitleRedText"
            android:text="@string/verify" />

        <ImageView
            android:id="@+id/iv_verify_return"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/left_arrow_white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />

    </FrameLayout>

    

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/erhuo_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#F9F8F4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
       	android:layout_marginTop="30dp"
       	android:background="#ffffff" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/et_phone_verify"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:hint="@string/input_phone_num"
            android:textSize="@dimen/font_middle"
            android:textColorHint="@color/text_hint_color" >
        </EditText>  
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
       	android:layout_marginTop="10dp"
       	android:background="#ffffff" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/et_pwd_verify"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:hint="@string/input_verify_code"
            android:textSize="@dimen/font_middle"
            android:textColorHint="@color/text_hint_color" >
        </EditText>
        
        <Button
            android:id="@+id/btn_msg_verify"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/msg_verify_code"
            android:textColor="#ffffff"
            android:textSize="@dimen/font_middle"
            android:background="@drawable/shape"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp" />  
    </LinearLayout>

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/verify"
        android:background="#FF3F40"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff" />

</LinearLayout>

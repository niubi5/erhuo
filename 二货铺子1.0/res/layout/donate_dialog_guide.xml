<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/transparent2"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@string/donation_dialog_title" />

    </RelativeLayout>
    
    <View 
        android:id="@+id/donation_dialog_separate_one"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >
    <TextView
        android:id="@+id/donation_dialog_content_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="@string/donation_dialog_content_one"
        android:layout_marginTop="10dp"
        
        />
    
     <TextView
        android:id="@+id/donation_dialog_content_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="@string/donation_dialog_content_two"
        android:layout_marginTop="8dp"
        
        />
     <TextView
         android:id="@+id/donation_dialog_content_two_"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/white"
         android:textSize="12sp"
         android:text="@string/donation_dialog_content_two_"
         android:layout_marginLeft="13dp"
         />
     
     <TextView
        android:id="@+id/donation_dialog_content_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="@string/donation_dialog_content_three"
        android:layout_marginTop="8dp"
        
        />

     
    </LinearLayout>
    
    <View 
        android:id="@+id/donation_dialog_separate_two"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/donation_skill_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/donation_dialog_skill_one"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
             />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
        <FrameLayout 
            android:layout_width="60dp"
            android:layout_height="60dp"
            >
            <ImageView 
                android:id="@+id/donation_skill_image_one"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/donation_skill_one"
                />

            <ImageView
               
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/donation_skill_yes" />

        </FrameLayout>
        
        <FrameLayout 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
            <ImageView 
                android:id="@+id/donation_skill_image_one_no"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/donation_skill_one_no"
                />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/donation_skill_no" />

        </FrameLayout>

        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/donation_skill_two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/donation_dialog_skill_two"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
             />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <FrameLayout 
            android:layout_width="60dp"
            android:layout_height="60dp"
            >
            <ImageView 
                android:id="@+id/donation_skill_image_two"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/donation_skill_two"
                />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/donation_skill_yes" />

        </FrameLayout>
        
        <FrameLayout 
            android:layout_width="70dp"
            android:layout_height="60dp"
            >
            <ImageView 
                android:id="@+id/donation_skill_image_two_no"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/donation_skill_two_no"
                />

            <ImageView
                
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/donation_skill_no" />

        </FrameLayout>

        </LinearLayout>
    </LinearLayout>
    
    <View 
        android:id="@+id/donation_dialog_separate_three"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    
    <TextView
            android:id="@+id/donation_dialog_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/donation_dialog_warning"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="12sp"
             />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/donation_dialog_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/donation_dialog_close_btn" />
        
    </RelativeLayout>
</LinearLayout>

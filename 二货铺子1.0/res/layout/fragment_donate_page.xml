<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/main_bgcolor"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/erhuo_donate_title"
        style="@style/FrameTitleRed" >

        <TextView
            style="@style/FrameTitleRedText"
            android:text="爱心捐赠" />

        <ImageView
            android:id="@+id/home_search"
            style="@style/FrameTitleButtonRight"
            android:src="@drawable/goods_help_plus" />
    </FrameLayout>

    <View 
        android:id="@+id/separate_one"
        style="@style/ShadowTitle" />

    <ListView
        android:id="@+id/lv_donations"
        android:layout_below="@id/erhuo_donate_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>
    
    <ImageView 
        android:id="@+id/iv_to_top"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/donation_back_top"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        
        
        />
    

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="20dp" >

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"   
        android:background="#C1C1C1" />

    <RelativeLayout
        android:id="@+id/rl_donate_donation_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_help_donate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/font_huge" />

        <TextView
            android:id="@+id/tv_help_donate_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_help_donate_name"
            android:layout_below="@+id/tv_help_donate_name"
            android:layout_marginTop="10dp"
            android:singleLine="false"
            android:text="TextView"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/font_middle" />

        <TextView
            android:id="@+id/tv_help_donate_wuliu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_help_donate_brief"
            android:layout_below="@+id/tv_help_donate_brief"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/font_middle" />

        <TextView
            android:id="@+id/tv_help_donate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_help_donate_brief"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/font_middle" />

        <TextView
            android:id="@+id/tv_help_donate_wuliu_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_help_donate_wuliu_name"
            android:layout_below="@+id/tv_help_donate_wuliu_name"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/font_middle" />
    </RelativeLayout>

</RelativeLayout>
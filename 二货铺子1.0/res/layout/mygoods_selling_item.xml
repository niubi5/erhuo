<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="20dp" >
    <RelativeLayout
        android:id="@+id/rl_selling_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_selling_time" >

        <com.geminno.erhuo.view.RoundCornerImageView
            android:id="@+id/rciv_selling"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_error" />

        <TextView
            android:id="@+id/tv_selling_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_selling_name"
            android:layout_alignBottom="@+id/tv_selling_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_selling_name"
            android:text="TextView"
            android:textColor="@color/red"
            android:textSize="@dimen/font_big" />

        <TextView
            android:id="@+id/tv_selling_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rciv_selling"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/rciv_selling"
            android:text="TextView"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/font_huge" />

        <TextView
            android:id="@+id/tv_selling_buyprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_selling_price"
            android:layout_alignBottom="@+id/tv_selling_price"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_selling_price"
            android:text="TextView"
            android:textColor="@color/dimgrey"
            android:textSize="@dimen/font_s_tinysmall" />

        <TextView
            android:id="@+id/tv_selling_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_selling_type"
            android:layout_alignLeft="@+id/tv_selling_name"
            android:layout_below="@+id/tv_selling_name"
            android:layout_marginTop="10dp"
            android:singleLine="false"
            android:text="TextView"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/font_middle" />

        <TextView
            android:id="@+id/tv_selling_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rciv_selling"
            android:layout_alignLeft="@+id/tv_selling_brief"
            android:background="@drawable/round_conner_textview"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="TextView"
            android:textColor="@color/selling_blue"
            android:textSize="@dimen/font_middle" />

        <TextView
            android:id="@+id/tv_selling_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_selling_brief"
            android:layout_toRightOf="@+id/tv_selling_type"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_conner_textview"
            android:ellipsize="end"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/selling_blue"
            android:textSize="@dimen/font_middle" />

    </RelativeLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_above="@id/ll_selling_time"
        android:layout_marginTop="15dp"
        android:background="#E0E0E0" />

    <LinearLayout
        android:id="@+id/ll_selling_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_selling_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/time_selling_icon" />

        <TextView
            android:id="@+id/tv_selling_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginLeft="3dp" />
    </LinearLayout>
   

    <RelativeLayout
        android:id="@+id/rl_selling_opration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rl_selling_goods" >

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C1C1C1" />

        <LinearLayout
            android:id="@+id/ll_selling_opration"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_selling_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/icon_delete"
                android:text="@string/delete"
                android:textSize="@dimen/font_big"
                android:textColor="@color/dimgray" />

            <View
                android:id="@+id/view3"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:background="#C9C9C9" />

            <Button
                android:id="@+id/btn_selling_marksold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/icon_sold"
                android:text="@string/mark_sold"
                android:textSize="@dimen/font_big"
                android:textColor="@color/dimgray" />
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_selling_opration"
            android:layout_marginBottom="20dp"
            android:background="#E0E0E0" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F8F4"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ship_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_xia"
        android:layout_below="@+id/view_address"
        android:background="@color/main_title_white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lin_ship"
            style="@style/MyInfoLinearLayout"
            android:gravity="left" >

            <TextView
                android:id="@+id/tv_ship_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:hint="收货人"
                android:textSize="@dimen/font_middle" />

            <TextView
                android:id="@+id/et_ship_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:ems="10"
                android:hint="电话号码"
                android:inputType="textPersonName"
                android:textSize="@dimen/font_middle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_address"
            style="@style/MyInfoLinearLayout"
            android:gravity="left" >

            <TextView
                android:id="@+id/tv_address_qu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:hint="详细地址"
                android:textSize="@dimen/font_middle" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_moren"
                style="@style/FrameTitleButtonRight"
                android:src="@drawable/address_select_default" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_address_specific"
            style="@style/MyInfoLinearLayout"
            android:layout_height="20dp"
            android:gravity="left" >

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C1C1C1" />

        <LinearLayout
            android:id="@+id/ll_ship_opration"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_ship_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/icon_delete"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="@string/delete"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/font_big" />

            <View
                android:id="@+id/view3"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:background="#C9C9C9" />

            <Button
                android:id="@+id/ship_bianji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/iconfont_edit"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="编辑"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/font_big" />
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F9F8F4" />
    </LinearLayout>

</LinearLayout>